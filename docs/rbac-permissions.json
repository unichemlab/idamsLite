{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PharmaCorp RBAC Permissions Schema",
    "type": "object",
    "definitions": {
        "permission": {
            "type": "object",
            "properties": {
                "action": {
                    "type": "string",
                    "enum": [
                        "create",
                        "read",
                        "update",
                        "delete",
                        "approve",
                        "manage"
                    ]
                },
                "subject": {
                    "type": "string",
                    "enum": [
                        "all",
                        "user-requests",
                        "tasks",
                        "reports",
                        "plant-users",
                        "activity-logs",
                        "roles",
                        "departments",
                        "applications",
                        "servers",
                        "system",
                        "vendors",
                        "plants"
                    ]
                }
            },
            "required": [
                "action",
                "subject"
            ]
        },
        "role": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "permissions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/permission"
                    }
                }
            },
            "required": [
                "name",
                "permissions"
            ]
        }
    },
    "properties": {
        "roles": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/role"
            }
        }
    },
    "required": [
        "roles"
    ]
}